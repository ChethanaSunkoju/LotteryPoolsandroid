<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    
    
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="25dp"
        app:cardCornerRadius="5dp"
        android:elevation="8dp"
        app:cardMaxElevation="10dp">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:orientation="horizontal">

    <View
        android:id="@+id/view"
        android:layout_width="10dp"
        android:layout_height="wrap_content"
        android:background="@color/light_pink"
        android:layout_marginRight="10dp">

    </View>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="10dp">
        
        <TextView
            android:id="@+id/tv_pool_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lottery Pool"
            android:textSize="24sp"
            android:textColor="@color/black"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            
            <TextView
                android:id="@+id/tv_target"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Target Amount"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/tv_game"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Game"
                android:layout_marginLeft="30dp"
                android:textSize="15sp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/tv_target_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$40 of $100"
                android:textSize="18sp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/tv_game_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Megamillion"
                android:layout_marginLeft="30dp"
                android:textSize="18sp"
                android:textColor="@color/black"/>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/tv_total_numbers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 of 4 members contributed"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tv_pay"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:text="Pay"
                android:layout_marginLeft="30dp"
                android:textAlignment="center"
                android:padding="4dp"
                android:textColor="@color/white"
                android:textStyle="normal"
                android:textSize="16sp"
                android:background="@drawable/btn_background_pink"/>


        </LinearLayout>

    </LinearLayout>



</LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>